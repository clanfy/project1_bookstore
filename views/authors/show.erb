<h2>Author</h2>

<h4><%= @author.name %></h4>
<br>

<h3>Books stocked by this Author</h3>

<% @books.each do |book| %>

<%= book.title if book.author.id == @author.id%>

<br>
<% end %>



<br>
<a href="/authors/<%= @author.id%>/edit">Edit Author</a>
<br>
<br>
<a href="/authors">Back to all Authors</a>
<br>
<br>


<form action="/authors/<%= @author.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <form action="/authors/<%= @author.id %>/delete" method="post">
    <input type="submit" onclick="alert('Author will be deleted')" value="Delete">
  </form>
</form>