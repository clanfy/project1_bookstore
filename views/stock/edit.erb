<div class="content">

  <h2>Edit Stock</h2>

  <%= @stock.book.title %> by <%= @stock.book.author.name %>

  <br>
  <form action="/stock/<%= @stock.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="title">Book title:</label>
    <input type="hidden" name="book_id" value="<%= @stock.book.id %>">

    <select name="author_id">
      <% @authors.each do |author| %>
      <option value="<%= author.id %>" <%= 'selected' if @stock.book.author.id == author.id %>><%= author.name %></option>
      <% end %>
    </select>

    <label for="quantity">Quantity:</label>
    <input type="number" name="quantity" value="<%= @stock.quantity %>"><br>

    <input type='submit' value="Update Stock">
  </form>


</div>